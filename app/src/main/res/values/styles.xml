<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--STATUS DELIVERY-->
    <style name="textSize12">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorCardView</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textSize10" parent="textSize12">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="textSize11" parent="textSize12">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="textSize14" parent="textSize12">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="textSize16" parent="textSize12">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="textSize22" parent="textSize12">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="textSizeTitle14">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="textSizeTitle12">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textSizeTitle16" parent="textSizeTitle14">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="textSizeMedium12" parent="textSize12">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorTextTable</item>
    </style>


    <style name="textItemCardView" parent="textSize14">
        <item name="android:background">@drawable/round_item</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="textItemCardViewPink" parent="textItemCardView">
        <item name="android:background">@drawable/roudn_item_pink</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="buttonAccept" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/textSize14</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:background">@color/colorPrincipalAvon</item>
    </style>

    <style name="buttonCancel" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorPrincipalAvon</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="strokeColor">@color/colorPrincipalAvon</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="buttonPhoto" parent="buttonCancel">
        <item name="strokeColor">@color/colorCardView</item>
        <item name="android:textColor">@color/colorCardView</item>
    </style>


</resources>
